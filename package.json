{
  "name": "notescli",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "packageManager": "bun@1.3.3",
  "description": "Create and Read Apple Notes from Markdown via CLI (macOS).",
  "license": "UNLICENSED",
  "bin": {
    "notescli": "dist/index.js"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsup src/index.ts --format esm --platform node --target node20 --sourcemap",
    "build:bin:darwin-arm64": "bun build src/index.ts --compile --target=bun-darwin-arm64 --outfile dist/darwin-arm64/notescli",
    "build:bin:darwin-x64": "bun build src/index.ts --compile --target=bun-darwin-x64 --outfile dist/darwin-x64/notescli",
    "package:release": "bash scripts/package-release.sh",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint .",
    "format": "prettier -w .",
    "check": "bun run typecheck && bun run lint && bun run test",
    "knip": "knip",
    "jscpd": "jscpd"
  },
  "dependencies": {
    "commander": "^14.0.2",
    "cosmiconfig": "^9.0.0",
    "markdown-it": "^14.1.0",
    "turndown": "^7.2.2",
    "turndown-plugin-gfm": "^1.0.2"
  },
  "devDependencies": {
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^22.0.0",
    "@types/turndown": "^5.0.6",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "jscpd": "^4.0.5",
    "knip": "^5.78.0",
    "prettier": "^3.7.4",
    "tsup": "^8.5.1",
    "tsx": "^4.0.16",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  }
}
